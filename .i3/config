# i3 config file (v4)

# ---------
# VARIABLES
# ---------

# modifier (windows key)
set $mod Mod4
set $alt Mod1
set $ctrl Control

# directions
set $up Up
set $down Down
set $left Left
set $right Right


# ------
# CONFIG
# ------

# font for window titles and ibar
font pango:monospace 8

# disable title bar (deprecated way)
for_window [class="^.*"] border pixel 1

# move to previous workspace when moving to the current workspace
workspace_auto_back_and_forth yes


# ------
# MACROS
# ------

set $FOCUS_ROOT focus parent; focus parent; focus parent; focus parent; focus child; focus child

# -------------
# CORE BINDINGS 
# -------------

# new terminal
bindsym $mod+Return exec i3-sensible-terminal

# open program launcher
bindsym $mod+space exec dmenu_run

# kill focused window
bindsym $mod+q kill

# reload i3
bindsym $mod+Shift+c restart

# restart i3 (violent reload)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"


# -----------------
# WINDOW MANAGEMENT
# -----------------

# default layout
workspace_layout tabbed

# split container
bindsym $mod+s split toggle
bindsym $mod+h split horizontal
bindsym $mod+v split vertical

# fullscreen
bindsym $mod+z fullscreen toggle


# short focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# long focus
bindsym $mod+Shift+a $FOCUS_ROOT
bindsym $ctrl+$mod+$left $FOCUS_ROOT; focus left;
bindsym $ctrl+$mod+$right $FOCUS_ROOT; focus right;

# workspace focus
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+0 workspace 0

# short move
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# long move
bindsym Shift+$ctrl+$mod+$left focus parent; focus parent; focus parent; focus parent; focus child; focus child; focus left;
bindsym Shift+$ctrl+$mod+$right focus parent; focus parent; focus parent; focus parent; focus child; focus child; focus right;

# workspace move
bindsym $mod+Shift+1 move container to workspace 1; workspace 1
bindsym $mod+Shift+2 move container to workspace 2; workspace 2
bindsym $mod+Shift+3 move container to workspace 3; workspace 3
bindsym $mod+Shift+4 move container to workspace 4; workspace 4
bindsym $mod+Shift+0 move container to workspace 10; workspace 0


# change container layout
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+w layout tabbed
#bindsym $mod+Shift+e layout toggle split

# focus the parent/child container
#bindsym $mod+Shift+a focus parent
#bindsym $mod+Shift+d focus child

# toggle floating
bindsym $mod+x floating toggle

# drag floating windows
#floating_modifier $mod

# change focus between tiling / floating windows
bindsym $mod+m focus mode_toggle


# ---------
# SHORTCUTS
# ---------

# firefox
bindsym $mod+f exec firefox


# -------
# PATCHES
# -------

# fn keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86MonBrightnessUp exec light -A 1 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 1 # decrease screen brightness
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


# -------
# WAKE UP
# -------

# start compton
exec compton

# start i3bar
bar {
       status_command i3status --config $HOME/.dotfiles/.i3/i3status.config
       tray_output primary
}

# background
exec_always feh --bg-fill /home/dreyes/downloads/Pictures/cat.png
#exec_always feh --bg-fill /home/dreyes/downloads/Pictures/white_hair_coffee.png
#exec_always feh --bg-fill /home/dreyes/downloads/Pictures/train.jpg

